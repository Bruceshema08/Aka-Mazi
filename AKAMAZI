<body>
    <div class="overlay">
        <h2>BRUCE LINK GO</h2>
        <input type="text" id="userLink" placeholder="Enter full URL (https://example.com)">
        <br>
        <button onclick="goToLink()">Go</button>
    </div>

    <script>
        function goToLink() {
            const link = document.getElementById("userLink").value;
            if (link) {
                // Open the link in the same tab
                window.location.href = link;
                // Or open in new tab: window.open(link, "_blank");
            } else {
                alert("Please enter a URL first!");
            }
        }
    </script>
